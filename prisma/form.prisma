enum FormStatus {
    PENDING  @map("1")
    ACCEPTED @map("2")
    DENIED   @map("3")
}

model Form {
    id           String     @id
    username     String
    password     String
    ipAddress    String
    reasonToPlay String
    status       FormStatus @default(PENDING)
    deniedReason String?
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @default(now()) @updatedAt
    accepterId   String?
    accepter     User?      @relation(fields: [accepterId], references: [id])
}
