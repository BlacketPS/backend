enum FormStatus {
    PENDING
    ACCEPTED
    DENIED
}

model Form {
    id           String     @id @default(cuid())
    username     String     @unique
    password     String
    ipAddress    String
    reasonToPlay String
    status       FormStatus @default(PENDING)
    deniedReason String?
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
    accepterId   String?
    accepter     User?      @relation(fields: [accepterId], references: [id])
}
