model Message {
    id           Int       @id @default(autoincrement())
    authorId     String    @db.VarChar(255)
    roomId       Int
    content      String
    mentions     User[]    @relation("mentionedUser")
    replyingToId Int?
    edited       Boolean   @default(false)
    deleted      Boolean   @default(false)
    createdAt    DateTime  @default(now())
    updatedAt    DateTime  @default(now()) @updatedAt
    user         User      @relation(fields: [authorId], references: [id], onDelete: NoAction)
    reply        Message?  @relation("reply", fields: [replyingToId], references: [id])
    replies      Message[] @relation("reply")
    room         Room      @relation(fields: [roomId], references: [id], onDelete: NoAction)
}
