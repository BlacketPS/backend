{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2022",
        "module": "ES2022",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "lib": [
            "esnext"
        ],
        "baseUrl": "./src",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./",
        "paths": {
            "@functions/*": [
                "functions/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}